<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container">

  <div class="list blue">
    <div class="signup-backarrow-container">
      <%= link_to do %>
      <%=link_to image_tag("backarrow.png", alt:"back"), class: "backarrow-icon"  %>
      <% end %>
    </div>
    <h2 class="list blue">REGISTER</h2>
    <%= f.submit "Next", class: "signup-button" %>
  </div>
  

  <div class="sub-container">
   
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "field", required: true %>

      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field", required: true %>

      <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "field", required: true %>

      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field", required: true %>

  </div>
</div>

<% end %>